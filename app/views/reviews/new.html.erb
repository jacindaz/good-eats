<hr>
<h3>Your Review</h3>

<%= form_for [@restaurant, @review] do |f| %>

  <% if @review.errors.any? %>
    <ul>
      <% @review.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

<div class="form-group">
  <%= f.label :rating %>
  <%= f.select :rating, [5,4,3,2,1] %>
</div>

<div class="form-group">
  <%= f.label :body %>
  <%= f.text_area :body, rows: 10, placeholder: "500 character limit" %>
</div>

<div>
  <%= f.submit "Submit your Review" %>
</div>

<% end %>
