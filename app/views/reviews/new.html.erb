<h3>Write a Review</h3>

<%= form_for [@restaurant, @review] do |f| %>

  <% if @review.errors.any? %>
    <ul>
      <% @review.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

<div>
  <%= f.label :rating %>
  <%= f.text_field :rating %>
</div>

<div>
  <%= f.label :body %>
  <%= f.text_field :body %>
</div>

<div>
  <%= f.submit "Submit your Review" %>
</div>

<% end %>
