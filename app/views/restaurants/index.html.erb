<table class="table table-hover">
  <th>Restaurant</th>
  <th>Location</th>
  <th>Description</th>
  <% @restaurants.each do |restaurant| %>
    <tr>
      <td><%= link_to restaurant.name, restaurant_path(restaurant.id) %></td>
      <td><%= restaurant.address %>, <%= restaurant.city %>, <%= restaurant.state %> <%= restaurant.zipcode %></td>
      <td><%= restaurant.description %></td>
    </tr>
  <% end %>
</table>

<br><br>

<h4><%= link_to "Create a New Restaurant", new_restaurant_path %></h4>
