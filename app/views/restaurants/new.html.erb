<%= form_for @restaurant do |f| %>

  <% if @restaurant.errors.any? %>
    <ul>
      <% @restaurant.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

<div class="form-inline">
  <%= f.label :name %>&nbsp;&nbsp;<%= f.text_field :name %>
</div>
<br>

<div class="form-inline">
  <%= f.label :address %>&nbsp;&nbsp;<%= f.text_field :address %>
</div><br>

<div class="form-inline">
  <%= f.label :city %>
  <%= f.text_field :city %>&nbsp;

  <%= f.label :state %>
  <%= f.select :state, @states %>&nbsp;

  <%= f.label "Zip" %>
  <%= f.text_field :zipcode %>
</div><br>

<div>
  <%= f.label :description %>
  <%= f.text_area :description %>
</div>

<div>
  <%= f.label "Type of Cuisine" %>
  <%= f.select :category, ["African", "American", "Asian Fusion", "BBQ", "Brazilian", "Chinese", "Coffeeshop", "French", "Indian", "Italian", "Mexican", "Moroccan", "Spanish", "Sushi", "Thai", "Vegan", "Vietnamese"] %>
</div>

<div>
  <%= f.submit "Submit your restaurant" %>
</div>

<% end %>
